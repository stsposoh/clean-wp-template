.case
    text-align center
    height: 225px;
    overflow: hidden;

    @media mq_desktop
        height: 200px;

        @media mq_wide_desktop
            height: 250px;

    &:hover
        .case__overlay
            background-color rgba(0, 0, 0, 0.72);

        .case__img
            transform: scale(1.3);

        .case__overlay-title
            color accent-color
            transition: all 0.5s ease;

    &__overlay
        display: block;
        position: absolute;
        top: 0;
        z-index: 2;
        height: 100%;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.45);
        transition: all 0.5s ease;

    &__img
        height: 100%;
        background-position: center;
        background-size: cover;
        transition: all 0.5s ease;

    &__overlay-content
        margin: 0;
        transform: translate(-50%, -50%);
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100%;

    &__overlay-title
        font-size: 19px;
        line-height: 22px;
        color: #eaeaea;
        transition: all 0.5s ease;

    &__overlay-line
        display: inline-block;
        height: 6px;
        background-color: accent-color
        width: 142px;
        margin: 5px 0;
        transform: skewX(-12deg);
















.toggle-mnu
    position: absolute;
    top: 0
    right 0
    display: block
    width: 28px
    height: 28px
    margin: 11px 0 0

    span:after, span:before
        content: ""
        position: absolute
        left: 0
        top: 9px

    span:after
        top: 18px

    span
        position: relative
        display: block

    span, span:after, span:before
        width: 100%
        height: 2px
        background-color: color_text
        transition: all 0.3s
        backface-visibility: hidden
        border-radius: 2px


    &.on span
        background-color: transparent

    &.on span:before
        transform: rotate(45deg) translate(-1px, 0px)

    &.on span:after
        transform: rotate(-45deg) translate(6px, -7px)


