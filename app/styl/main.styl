.accordion
    transform: translateZ(0);
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
    background: #fff;

    & > .accordion-toggle
        position: absolute;
        opacity: 0;
        display: none;

    & > label
        position: relative;
        background-color: #ffe1a3;
        display: block;
        height: 50px;
        line-height: 50px;
        padding: 0 20px;
        font-size: 15px;
        font-weight: 700;
        border-top: 1px solid #ddd;
        cursor: pointer;
        color: #f54949;
        text-decoration: underline;

        &:after
            content: '\f078';
            position: absolute;
            top: 0
            right: 20px;
            font-family: fontawesome;
            transform: rotate(90deg);
            transition: .3s transform;

    & > section
        height: 0;
        transition: .3s all;
        overflow: hidden;

        p
            margin: 15px 0;
            padding: 0 20px;
            font-size: 17px;
            line-height: 1.5;

    & > .accordion-toggle:checked ~ label:after
        transform: rotate(0deg);

    & > .accordion-toggle:checked ~ section
        height 120px





